{
  "info": {
    "name": "Backend API Tests",
    "_postman_id": "auto",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health (Root)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}{{healthPath}}",
          "host": ["{{baseUrl}}"],
          "path": ["{{healthPath}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 200/301/302/404', function () {",
              "  pm.expect([200,301,302,404]).to.include(pm.response.code);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "List (Beispiel)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}{{listPath}}",
          "host": ["{{baseUrl}}"],
          "path": ["{{listPath}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status 200/304', function () {",
              "  pm.expect([200,304]).to.include(pm.response.code);",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "healthPath", "value": "/" },
    { "key": "listPath", "value": "/api/users" }
  ]
}
